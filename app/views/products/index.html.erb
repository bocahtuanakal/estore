<h1>Listing products</h1>

    
    <div class="row features" data-equalizer>
    <% @products.each do |product| %>
        <div class="small-12 medium-4 large-4 columns" data-equalizer-watch>
            <div class="image-wrapper">
                <span><%= image_link_to product.pdimg.url, product, { size: '300x300', alt: 'product image' }, { title: 'image title' } %>  </span>
            </div>
            <p><%= product.name %></p>
            <h3>$<%= product.price %></h3><hr>
            <p>$<%= product.description %></p>
            <ul class="button-group even-2">
                      <li><%= link_to 'Edit', edit_product_path(product), class:"button success tiny" %></li>
                      <li><%= link_to 'Delete', product, method: :delete, data: { confirm: "You sure?" }, class:"button alert tiny" %></li>
            </ul>
         </div>
     <% end %>
    </div>
    

<br>

<%= link_to 'New Product', new_product_path, class:"button radius" %>
